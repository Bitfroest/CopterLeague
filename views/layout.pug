doctype html
html(lang='de')
	head
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css', integrity='sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r', crossorigin='anonymous')
		link(rel='stylesheet', href='https://rawgit.com/lipis/bootstrap-social/gh-pages/bootstrap-social.css')
		script(type="application/javascript", src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')
		script(type="application/javascript", src='https://use.fontawesome.com/c54f8bd9b1.js')
		script(type="application/javascript", src='https://code.jquery.com/jquery-2.2.3.min.js')
		// import angular - default scripts
		script(src='zone.js/dist/zone.js')
		script(src='reflect-metadata/Reflect.js')
		script(src='rxjs/bundles/Rx.umd.js')
		// import angular - custom modules
		script(src='app.js')
		// set custom style
		style
			|body, html {height: 100%;}
			|header {height: 100px;}
			|.nav-space-r {margin-right: 2px !important;}
			|.nav-space-t {margin-top: 8px;}
	body
		noscript
			div#noscript-padding
		header
			nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
				div.container-fluid
					div.navbar-header
						button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='.navbar-collapse')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='#') Copter League
					div.collapse.navbar-collapse
						ul.nav.navbar-nav
							li
								a(href='/') Veranstaltungen
							li
								a(href='/') Piloten
							li
								a(href='/') Registrieren
						
						if !doNotShowNavbarLogin
							div.nav-login#nav-login
								a.btn.btn-social.btn-facebook.navbar-right.nav-space-r.nav-space-t(href="/auth/facebook")
									i.fa.fa-facebook
									span Login mit Facebook
								a.btn.btn-social.btn-google.navbar-right.nav-space-r.nav-space-t(href="/auth/google")
									i.fa.fa-google
									span Login mit google
								form.navbar-form.navbar-right(role='login', name='loginForm')
									div.form-group
										input(class='form-control nav-space-r', type='email', required='required', name='email', spellcheck='false', placeholder='jemand@bleistift.de')
									div.form-group
										input(class='form-control nav-space-r', type='password', required='required', ng-model='login.password', name='password', placeholder='Kennwort')
									div.form-group
										input(class='form-control', type='hidden', name='persistent', ng-model='login.persistent', value='1')
									div.form-group
										input(class='form-control', class='btn btn-primary' type='submit', ng-click='doLogin()', ng-disabled='loginForm.$invalid', value='Anmelden')
								
		div.container
			div.fail-popups#fail-popups
				div.alert.alert-danger.centered(role='alert')
					b 
						|JavaScript ist deaktiviert! 
					|Bitte aktivieren Sie JavaScript.
			noscript
				div#noscript-warning
					|Diese Seite funktioniert am Besten mit JavaScript
		div.container
			my-app
				|Loading...
		div.container
			hr
			div.row
				div.footer
					p.text-muted.centered Copyright (c) 2016 Bitfr√∂st Studios 
		script(type="application/javascript")
			|function fpDisplay(visibility) {
			|	document.getElementById('fail-popups').style.display= visibility;
			|};
			|fpDisplay("none");